17.Fibonacci series using for loop
PROGRAM:
#include<iostream>
using namespace std;
int main()
{
	int n,t1=0,t2=1,t3=0;
	cout<<"enter the number of terms:";
	cin>>n;
	cout<<"fibonacci series:";
	for(int i=1;i<=n;i++){
		if(i==1){
			cout<<t1<<",";
			continue;
		}
		if(i==2){
			cout<<t2<<",";
			continue;
		}
		t3=t1+t2;
		t1=t2;
		t2=t3;
		cout<<t3<<",";
	}
	return 0;
}
18.Prime number using for loop
PROGRAM:
#include<iostream>
using namespace std;
int main()
{
	int n,i,m=0,flag=0;
	cout<<"enter the number:";
	cin>>n;
	m=n/2;
	for(i=2;i<=m;i++)
	{
		if(n%i==0)
		{
			cout<<"not a prime number"<<endl;
			flag=1;
			break;
		}
	}
	if(flag==0)
	cout<<"prime number"<<endl;
	return 0;
}
